
<div class="threads">
  <%= link_to conversation, style: "text-decoration: none;" do %>
    <div class="threadLikes" id="conversation_<%= conversation.id %>_likes">
      <%= render partial: "likes", locals: {conversation: conversation} %>
    </div>
    <div class="threadSubject">
      <h3><%= link_to conversation.subject, conversation %></h3>
    </div>
    <div class="threadAvatar">
      <%= image_tag conversation.user.avatar_url  %>
    </div>
    <div class="threadComments">
      <span class="fa fa-comment-o">&nbsp;</span><span><%= conversation.post_count %></span>
    </div>
  <% end %>
</div>
