<% if user_signed_in? && current_user.commitments?(school) %>
  <%= link_to "New Conversation", new_school_conversation_path(school), class: "btn btn-primary" %>
    <% if current_user.admin? %>
      <%= link_to "Decommit from School", school_commitment_path(school), method: :delete, class: "btn btn-danger" %>
    <% end %>
<% elsif user_signed_in? && current_user.committed? %>
  
<% else %>
  <%= link_to "Commit to School", school_commitment_path(school), method: :post, data: {confirm: "Are you sure? You can only commit to one school! Committing allows you to create conversations on your schools page."}, class: "btn btn-primary" %>
<% end %>