<aside id="menu" class='sidebar'>
  <div class='main-nav'>
    <%= link_to fa_icon('bars'), '#', id: "menuToggle", class: "mobileBtn" %>
   <!--  <i class="mobileBtn fa fa-bars" id="menuToggle"></i> -->
    <span><%= image_tag('b_logo.png', class: "bgLogo") %></span>
    <ul >
      <div class="logo">
        <%= link_to root_path do %>
          <%= image_tag('b_logo.png', style: "width: 35px; margin-top: 3px; margin-left: 2px;") %>
        <% end %>
      </div>
     <!--  <li class="newConvo">
        <%#= link_to "New Conversation", new_school_conversation_path(@school) %>
        <span class='fa fa-plus'></span>
      </li> -->
      <% if user_signed_in? %>
        <li>
            <%= link_to current_user.name, edit_user_registration_path %>
            <span><%= image_tag current_user.avatar.url(:nav), style: "border-radius: 50%; margin-top: -5px; margin-left: -3px;" %></span>
        </li>
        <% if current_user.admin? %>
          <li>
            <%= link_to "Users", users_path %>
            <span class='fa fa-users'></span>
          </li>
        <% end %>
        <li>
          <%= link_to "Logout", destroy_user_session_path, method: :delete%>
          <span class='fa fa-sign-out'></span>
        </li>
        <li>
          <%= link_to "Invite a Friend", new_user_invitation_path %>
          <span class='fa fa-paper-plane'></span>
        </li>
      <% else %>
        <li>
            <%= link_to "Login", new_user_session_path %>
            <span class='fa fa-sign-in'></span>
        </li>
      <% end %>
      <li>
        <a>Nearby Schools</a>
        <span class='fa fa-map-marker'></span>
      </li>
      <% @schools.each do |n| %>
        <li class="<%= n.name %>">
          <a><%= link_to n.name, school_path(n) %></a>
        </li>
      <% end %>
      <li>
        <a>Search</a>
        <span class='fa fa-search'></span>
      </li>
    </ul>
  </div>
</aside>