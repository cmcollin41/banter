<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Users</h1>
      <table class="table table-striped table-bordered">
        <thead>
          <th>ID</th>
          <th>Name</th>
          <th>Conversations</th>
          <th>Comments</th>
          <th>Upvotes</th>
          <th>Polls</th>
          <th>Polls Answered</th>
          <th>Email</th>
          <th>Username</th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.conversations.count %></td>
              <td><%= user.comments.count %></td>
              <td><%= user.likes.count %></td>
              <td><%= user.polls.count %></td>
              <td><%= user.answers.count %></td>
              <td><%= user.email %></td>
              <td><%= user.username %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- col-md-12 -->
  </div><!-- row -->
</div>

